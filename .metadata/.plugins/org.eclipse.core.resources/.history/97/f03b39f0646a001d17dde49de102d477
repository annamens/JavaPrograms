package javaPrograms;

public class ArmstrongNumber {

	public static void main(String[] args) {
		int n = 153;
		
		/*
		 * int count = 0; while (n != 0) { n = n / 10; count++; }
		 * System.out.println(count);
		 */
		double count=3;
		
		double sum=0;
		while(n!=0) {
			double x=n%10;
			
			x= Math.pow(x, count);
			sum = sum+x;
			System.out.println(x);
			n=n/10;
		}
		System.out.println(sum);
	}

}
